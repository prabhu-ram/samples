<table
	data-ng-show="productCategories.length > 0"

	class="table table-striped table-hover"
	>

	<tr class="success">
		<td>Category Name</td>
		<td>Details</td>
		<td>isActive Category</td>
		<td>Created Date</td>
		<td>Actions</td>
	</tr>

	<tr data-ng-repeat="productCategory in productCategories">
		<td>{{productCategory.CategoryName}}</td>
		<td>{{productCategory.Details}}</td>
		<td>{{productCategory.IsValid == "1" ? "Valid" : "Invalid"}}</td>
		<td>{{productCategory.CreatedDate}}</td>
		<td class="info">
			<!-- Single button -->
			<div class="btn-group">
				<button type="button" class ="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
					Edit Product Category <span class="caret"></span>
				</button>
				<ul class="dropdown-menu" role="menu">
					<li><a href="/editProductCategory/{{productCategory.Id}}">Edit Product Category</a></li>
					<li><a href="#">View Details</a></li>
					<li class="divider"></li>
					<li><a href="#" class="danger">Delete Product Category</a></li>
				</ul>
			</div>
		</td>
	</tr>
</table>

